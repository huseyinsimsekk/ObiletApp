@model List<ObiletApp.Models.ResponseModels.Journey>

<header class="text-white border-bottom box-shadow mb-3 p-3">

    <div class="container">
        <div class="row">
            <div class="col-1">
                <a asp-action="Index" class="text-white">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>
            <div class="col-11">
                <div class="container-fluent">
                    <div class="col-6">@ViewBag.Origin - @ViewBag.Destination</div>
                    <div class="col-6">@ViewBag.DepartureDate</div>
                </div>

            </div>
        </div>
    </div>
</header>

<div class="container">
    @foreach (var item in Model.OrderBy(m => m.Departure))
    {
        <div class="col-lg-4 col-md-8 col-sm-12 card my-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-6 text-custom-color">Kalkış   Varış </div>
                    <div class="col-6 text-end ">
                        <span class="badge bg-danger">
                            @item.OriginalPrice TL
                        </span>
                    </div>
                </div>
                <div class="card-text text-custom-color" style="font-size:15pt;">@item.Departure.Value.ToShortTimeString()  <i class="fa-solid fa-arrow-right"></i> @item.Arrival.Value.ToShortTimeString() </div>
                <div class="card-text">@item.Origin - @item.Destination </div>
            </div>
        </div>
    }
</div>
